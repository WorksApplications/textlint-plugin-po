{
    "name": "@arielairone/textlint-plugin-po",
    "version": "0.0.0-development",
    "description": "A textlint plugin processing the .po file format",
    "repository": "https://github.com/WorksApplications/textlint-plugin-po",
    "homepage": "https://github.com/WorksApplications/textlint-plugin-po#readme",
    "bugs": {
        "url": "https://github.com/WorksApplications/textlint-plugin-po/issues"
    },
    "license": "MIT",
    "author": "Works Applications Co.,Ltd.",
    "contributors": [
        "Ponraj Subramanian",
        "Harish Radhakrishnan",
        "Arun Kumar Murugesan",
        "Kengo TODA"
    ],
    "files": [
        "lib"
    ],
    "main": "./lib/main.js",
    "keywords": [
        "lint",
        "textlint",
        "textlintplugin",
        "plugin",
        "po"
    ],
    "engines": {
        "node": ">=12.0",
        "npm": ">=6.13"
    },
    "scripts": {
        "prepack": "tsc",
        "semantic-release": "semantic-release",
        "lint": "prettier --check \"./**/*.{ts,tsx,md,json}\" \"!./.nyc_output/**\"",
        "test": "nyc --reporter=html --extension .ts mocha \"test/**/*.spec.ts\""
    },
    "dependencies": {
        "@textlint/ast-node-types": "^4.2.5",
        "pofile": "^1.1.0",
        "structured-source": "^3.0.2"
    },
    "devDependencies": {
        "@semantic-release/commit-analyzer": "^8.0.0",
        "@semantic-release/github": "^7.0.0",
        "@semantic-release/npm": "^7.0.0",
        "@semantic-release/release-notes-generator": "^9.0.0",
        "@types/chai": "^4.2.4",
        "@types/mocha": "^8.0.0",
        "@types/node": "^15.0.0",
        "chai": "^4.2.0",
        "husky": "^6.0.0",
        "lint-staged": "^11.0.0",
        "mocha": "^8.1.3",
        "nyc": "^15.0.1",
        "prettier": "^2.1.2",
        "pretty-quick": "^3.1.0",
        "semantic-release": "^17.0.1",
        "textlint": "^11.4.0",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "post-checkout": "git secrets --register-aws"
        }
    },
    "lint-staged": {
        "*": [
            "git secrets --scan"
        ],
        "*.{ts,tsx,md,json}": [
            "prettier --write"
        ]
    },
    "publishConfig": {
        "access": "public"
    }
}
